{
  "name": "easydeploy",
  "displayName": "EasyDeploy",
  "description": "Deploy applications instantly to AWS, GCP, or Azure with a single click",
  "version": "0.1.0",
  "publisher": "easydeploy",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:easydeploy.deploy",
    "onCommand:easydeploy.init",
    "onCommand:easydeploy.status",
    "onCommand:easydeploy.logs",
    "onCommand:easydeploy.remove",
    "onCommand:easydeploy.openWidget",
    "workspaceContains:easydeploy.yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "easydeploy.deploy",
        "title": "EasyDeploy: Deploy Application"
      },
      {
        "command": "easydeploy.init",
        "title": "EasyDeploy: Initialize Configuration"
      },
      {
        "command": "easydeploy.status",
        "title": "EasyDeploy: Check Deployment Status"
      },
      {
        "command": "easydeploy.logs",
        "title": "EasyDeploy: View Deployment Logs"
      },
      {
        "command": "easydeploy.remove",
        "title": "EasyDeploy: Remove Deployment"
      },
      {
        "command": "easydeploy.openWidget",
        "title": "EasyDeploy: Open Dashboard Widget"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceFilename == easydeploy.yaml",
          "command": "easydeploy.deploy",
          "group": "navigation"
        },
        {
          "when": "resourceFilename == easydeploy.yaml",
          "command": "easydeploy.openWidget",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "easydeploy.deploy",
          "when": "view == explorer",
          "group": "navigation"
        },
        {
          "command": "easydeploy.openWidget",
          "when": "view == explorer",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceFilename == easydeploy.yaml",
          "command": "easydeploy.deploy",
          "group": "EasyDeploy@1"
        },
        {
          "when": "resourceFilename == easydeploy.yaml",
          "command": "easydeploy.status",
          "group": "EasyDeploy@2"
        },
        {
          "when": "resourceFilename == easydeploy.yaml",
          "command": "easydeploy.logs",
          "group": "EasyDeploy@3"
        },
        {
          "when": "resourceFilename == easydeploy.yaml",
          "command": "easydeploy.openWidget",
          "group": "EasyDeploy@4"
        }
      ]
    },
    "configuration": {
      "title": "EasyDeploy",
      "properties": {
        "easydeploy.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for EasyDeploy service"
        },
        "easydeploy.apiEndpoint": {
          "type": "string",
          "default": "https://api.easydeploy.com",
          "description": "EasyDeploy API endpoint URL"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "easydeploy-sidebar",
          "title": "EasyDeploy",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "easydeploy-sidebar": [
        {
          "id": "easydeploy-sidebar-view",
          "name": "Deployments"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^16.7.1",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "jest": "^27.1.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.2",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "js-yaml": "^4.1.0"
  }
}
